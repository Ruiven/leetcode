package main;

public class Solution {
	public String longestPalindrome(String s) {
        int maxLength = 0, maxIndex;
        
        for(int i = 0; i < 2*s.length()-1; i++) {
        	
        	if(i % 2 == 0) {
        		int length = 1;
        		int l = i/2-1, r = i/2+1;
        		while(l >= 0 && r < s.length() && s.charAt(l) == s.charAt(r)) {
        			length += 2;
        			l--;
        			r++;       			
        		}
        		if(length > maxLength) {
        			maxLength = length;
        			maxIndex = i;
        		}
        		
        	}
        	
        	
        	
        	
        	
        }
        
        
    }

}
