package main;

public class Solution {
	public static double myPow(double x, int n) {
		if(n == 0)
			return 1;
		if(n == 1)
			return x;
		double temp = myPow(x, n/2);
		if(n % 2 == 1)
			return temp*x;
		else
			return temp;
					
    }
	
	public static void main(String[] args) {
		System.out.print(myPow(2, 3));
	}
}
