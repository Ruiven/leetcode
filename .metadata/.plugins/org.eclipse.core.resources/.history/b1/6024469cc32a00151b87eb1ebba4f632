package main;

import java.util.Arrays;

public class Solution {
	public void nextPermutation(int[] nums) {
		if(nums.length <= 1)
			return;
		int begin = -1;
        for(int i = nums.length-2; i >= 0; i--) {
        	if(nums[i] < nums[i+1]) {
        		begin = i;
        		break;
        	}        	
        }
        
        if(begin == -1) {
        	Arrays.sort(nums);
        	return;
        }
        
        int temp = nums[begin];
        for(int i = begin+1; i < nums.length; i++) {
        	if(nums[i] > nums[begin]) {
        		nums[begin] = nums[i];
        		nums[i] = temp;
        		break;
        	}
        }
        
        Arrays.sort(nums + 1);
    }
}
