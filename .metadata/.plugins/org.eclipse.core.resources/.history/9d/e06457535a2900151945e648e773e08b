package main;

import java.util.ArrayList;
import java.util.List;

public class Solution {
	
	static char[][] board;
	
	public static List<String> letterCombinations(String digits) {
		
		board = {{'a'}};
		
		
        List<String> combinationList = new ArrayList<String>();
        backtrack(digits, 0, "", combinationList);
        return combinationList;
    }
	
	static void backtrack(String digits, int pos, String combination, List<String> combinationList) {
		if(pos == digits.length()) {
			combinationList.add(combination);
			return;
		}
		
		for(int i = 0; i < board[digits.charAt(pos) - '2'].length; i++ ) {
			combination = combination + board[digits.charAt(pos) - '2'][i];
			backtrack(digits, pos+1, combination, combinationList);
		}		
	}
	
	
	
}
