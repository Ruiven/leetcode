package main;


import java.util.Arrays;
import java.util.HashMap;


public class Solution {
	
	
	public static int canCompleteCircuit(int[] gas, int[] cost) {
		
		boolean found = true;
		
		int copy[] = new int[gas.length];
		for(int i = 0 ; i < gas.length; i++ ) {
			copy[i] = gas[i];
		}
		
		HashMap map = new HashMap<>();
		for(int i = 0 ; i < copy.length; i++) {
			map.put(copy[i], i);
		}
		
		Arrays.sort(copy);
		
		
		for(int i = copy.length-1; i >=0 ; i--) {	//try every possible solution		
			int remaining = 0;
			int index = (int) map.get(copy[i]);
			found = true;
			for(int j = 0; j < gas.length; j++ ) {	//simulated running
				remaining += gas[(index+j) % gas.length];
				remaining -= cost[(index+j) % gas.length];
				if(remaining < 0) {
					found = false;
					break;
				}
			}
			if(found) {
				return index;
			}
		}
		
		return -1;
        
    }
	
	public static void main(String[] args) {
		int gas[] = {5};
		int cost[] = {4};
		System.out.println(canCompleteCircuit(gas, cost));
	}
}
