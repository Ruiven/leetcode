package main;

import java.util.Stack;

class TreeNode {
	int val;
	TreeNode left;
	TreeNode right;
	TreeNode(int x) { val = x; }
}

public class Solution {
	public int minDepth(TreeNode root) {
        if(root == null)
        	return 0;
        
		int min = 0;
		boolean found = false;
		Stack<TreeNode> stack = new Stack<>();
		Stack<Integer> depthStack = new Stack<>();
        stack.push(root);
        depthStack.push(1);
        while(!stack.isEmpty()) {
        	TreeNode p = stack.pop();
        	int depth = depthStack.pop();
        	
        	if(p.left != null) {
        		stack.push(p.left);
        		depthStack.push(depth+1);
        	}
        	
        	if(p.right != null) {
        		stack.push(p.right);
        		depthStack.push(depth+1);
        	}
        	
        	if(!found || p.left == null && p.right == null) {
        		min = depth < min ? depth : min;
        		found = true;
        	}
        }
        
        return min;
    }
}
