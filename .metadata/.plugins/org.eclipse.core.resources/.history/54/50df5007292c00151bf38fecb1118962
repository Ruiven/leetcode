package main;

public class Solution {
	public int trap(int[] height) {
		
		int total = 0;
		
        for(int i = 1; i < height.length; i++ ){
        	int left = i, right = i, leftMax = height[i], rightMax = height[i];
        	for(int j = i; j >= 0; j--) {
        		if(height[j] > leftMax)
        			leftMax = height[j];
        	}
        	
        	for(int j = i; j < height.length; j++) {
        		if(height[j] > rightMax)
        			rightMax = height[j];
        	}
        	
        	total += (leftMax > rightMax ? rightMax : leftMax)-height[i];
        }
        
        return total;
    }
}
