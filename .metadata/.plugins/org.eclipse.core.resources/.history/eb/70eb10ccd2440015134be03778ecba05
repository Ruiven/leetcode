package main;

import java.util.HashSet;
import java.util.LinkedList;
import java.util.List;
import java.util.Queue;
import java.util.Set;

public class Solution {
	public List<List<String>> findLadders(String beginWord, String endWord, Set<String> dict) {
		Queue<String> queue = new LinkedList<>();
		queue.add(beginWord);
		
		
		
		Set<String> visited = new HashSet<>();
		visited.add(beginWord);
		
		int step = 1;
		int next = 1;
		int cur = 0;
		while(!queue.isEmpty() ) {
			String temp = queue.poll();
			
			next--;
			
			for(int i = 0 ; i < temp.length(); i++) {
				char[] tempCharArr = temp.toCharArray();
				for(char c = 'a'; c <= 'z' ; c++ ) {
					if(c == tempCharArr[i])
						continue;
					tempCharArr[i] = c;
					String changed = new String(tempCharArr);
					if(changed.equals(endWord))
						return step+1;
					
					if(wordDict.contains(changed) && !visited.contains(changed)) {
						queue.add(changed);
						cur++;
						visited.add(changed);
					}
				}
				System.out.print("");
			}
			if(next == 0) {
				next = cur;
				cur = 0;
				step++;
			}
			
		}
		return 0;
    }
}
