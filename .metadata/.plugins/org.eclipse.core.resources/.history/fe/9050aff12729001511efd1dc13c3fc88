package main;

public class Solution {
	public static int myAtoi(String str) {
		
		int sign = 1;
		int num= 0;
        for(int i = 0; i < str.length(); i++ ) {
        	if(str.charAt(i) == ' ')
        		continue;
        	
        	
        	else if(str.charAt(i) == '-') {
        		sign = -1;;
        		
        	}
        	else if(str.charAt(i) == '+') {
        		sign = 1;
        		
        	}
        	
        	else if(str.charAt(i)-'0' < 0 || str.charAt(i)-'0' > 9)
        		return 0;
        	
        	else {
        		num *= 10;
        		num += str.charAt(i) - '0'; 
        		
        		if(sign == -1) {
        			int max = -2147483648;
        			if(num < max/10 && i < str.length() || num*10 > 0 && i<str.length())
    	        		return max;
    	        	
        		}
        		else {
        			int max = 2147483647;
        			if(num > max/10 && i < str.length() || num*10 < 0 && i<str.length())
    	        		return max;
        		}
        		
        	}
        	
        }
        return num * sign;
    }
	
	public static void main(String[] args) {
		System.out.println(myAtoi("2147483647"));
	}
}
