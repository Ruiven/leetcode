package main;

public class Solution {
	public int searchInsert(int[] nums, int target) {
		int begin = 0, end = nums.length-1;
		
		while(begin < end) {
			if(nums[begin] > target)
				return begin;
			if(nums[end] < target)
				return end+1;
			int mid = (begin+end)/2;
			if(nums[mid] == target)
				return mid;
			
			if(nums[mid] < target) {
				begin = end+1;
				continue;
			}
			if(nums[mid] > target) {
				end = mid-1;
				continue;
			}
		}
        
		
		return 0;
		
    }
	
	
}
