package main;

class ListNode {
	int val;
	ListNode next;
	ListNode(int x) { val = x; }
}


public class Solution {
	public static ListNode partition(ListNode head, int x) {
        ListNode t = head;
        ListNode smallHead = null, bigHead = null;
        ListNode smallNode = null, bigNode = null;
        ListNode smallPrev = null, bigPrev = null;
        boolean smallFirst = true, bigFirst = true;
        while(t != null) {
        	if(t.val < x) {
        		smallNode  = new ListNode(t.val);
        		smallPrev.next = smallNode;
        		if(smallFirst) {
        			smallHead = smallNode;
        			smallFirst = false;
        		}
        		smallPrev = smallNode;
        		smallNode = smallNode.next;
        	}
        	else {
        		
        		bigNode = new ListNode(t.val);
        		bigPrev.next = bigNode;
        		if(bigFirst) {
        			bigHead = bigNode;
        			bigFirst = false;
        		}
        		bigPrev = bigNode;
        		bigNode = bigNode.next;
        	}
        	t = t.next;
        }
		
        smallNode.next = bigHead;	
		return smallHead;
    }
	
	public static void main(String[] args) {
		ListNode head = new ListNode(1);
		head.next = new ListNode(4);
		head.next.next = new ListNode(3);
		head.next.next.next = new ListNode(2);
		head.next.next.next.next = new ListNode(5);
		head.next.next.next.next.next = new ListNode(2);
	
		ListNode t = partition(head, 3);
		while(t != null) {
			System.out.println(t.val);
			t = t.next;
		}
		
		
	}
}
