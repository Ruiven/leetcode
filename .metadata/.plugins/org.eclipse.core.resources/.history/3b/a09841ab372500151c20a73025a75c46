package main;


public class Solution {
    public static ListNode addTwoNumbers(ListNode l1, ListNode l2) {
    	
    	ListNode out = null;
    	ListNode begin = out;
    	
    	while(l1 != null && l2 != null) {
    		if(out == null) {
    			out = new ListNode(0);
    		}
        	int bit = l1.val + l2.val;
        	out.val += bit % 10;      	
        	
        	if(out.val > 10) {
        		out.next = new ListNode(0);
        		out.next.val = 1;
        	}
        	
        	out = out.next;
        	l1 = l1.next;
        	l2 = l2.next;
        	
        } 
    	
    	while(l1 != null) {
    		if(out == null) {
    			out = new ListNode(0);
    		}
    		int bit = l1.val;
    		out.val += bit%10;
    		out.next = new ListNode(0);
    		
    		if(bit > 10) {
    			out.next.val = 1;
    		}
    		
    		out = out.next;
    		l1 = l1.next;
    	}
    	
    	while(l2 != null) {
    		int bit = l2.val + out.val;
    		out.val = bit%10;
    		out.next = new ListNode(0);
    		
    		if(bit > 10) {
    			out.next.val = 1;
    		}
    		
    		out = out.next;
    		l2 = l2.next;
    	}
    	
    	return begin;
    	
    }
    
    public static void main(String[] args) {
		ListNode a = new ListNode(1);
		a.next = new ListNode(2);
		a.next.next = new ListNode(3);
		
		ListNode b = new ListNode(4);
		b.next = new ListNode(5);
		b.next.next = new ListNode(6);
		
		addTwoNumbers(a, b);
		
	}
}