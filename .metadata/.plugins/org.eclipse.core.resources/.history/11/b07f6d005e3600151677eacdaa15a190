package main;

public class Solution {
	public static boolean isScramble(String s1, String s2) {
		if(s1.length() != s2.length())
			return false;
		
		if(s1.length() == 1)
			return s1.equals(s2);
		
        String temp1 = s1.substring(0, s1.length()/2);
        String temp2 = s1.substring(s1.length()/2);
        String temp3 = s2.substring(0, s2.length()/2);
        String temp4 = s2.substring(s2.length()/2);
        return isScramble(temp1, temp3) && isScramble(temp2, temp4) || isScramble(temp2, temp3) && isScramble(temp1, temp4);
    }
	
	public static void main(String[] args) {
		isScramble("rgtae", "great");
	}
}
