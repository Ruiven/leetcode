package main;

public class Solution {
	public static double myPow(double x, int n) {
		if(n == 0)
			return 1;
		if(n == 1)
			return x;
		
		int abs = n > 0 ? n : -n;
		double temp = myPow(x, abs/2);
		if(n > 0) {
			if(n % 2 == 1)
				return temp*temp*x;
			else
				return temp*temp;
		}
		else {
			if(n % (-2) == 1)
				return 1/(temp*temp*x);
			else
				return 1/(temp*temp);
		}
					
    }
	
	public static void main(String[] args) {
		System.out.print(myPow(2, -3));
	}
}
