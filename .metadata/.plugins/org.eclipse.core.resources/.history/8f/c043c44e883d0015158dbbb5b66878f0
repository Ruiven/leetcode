package main;

class TreeNode {
	int val;
	TreeNode left;
	TreeNode right;
	TreeNode(int x) { val = x; }
}

public class Solution {
	public int minDepth(TreeNode root) {
        if(root == null)
        	return 0;
        
		int min = 0;
		boolean found = false;
		Stack<TreeNode> stack = new Stack<>();
		Stack<Integer> depthStack = new Stack<>();
        stack.push(root);
        depthStack.push(1);
        while(!stack.isEmpty()) {
        	TreeNode p = stack.pop();
        	int depth = depthStack.pop();
        	
        	if(p != null) {
        		stack.push(p.left);
        		stack.push(p.right);
        		depthStack.push(depth+1);
        		depthStack.push(depth+1);
        	}
        	
        	else{
        		
        		if(!found || depth-1 < min) {
        			min = depth-1;
        			found = true;
        		}
        	}
        }
        
        return min;
    }
}
